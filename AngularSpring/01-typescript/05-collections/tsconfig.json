{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {

    // Updated by Raghu
    "module": "nodenext",
    "target": "es2024",
    "types": [],
    "lib": ["dom", "es2024"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
